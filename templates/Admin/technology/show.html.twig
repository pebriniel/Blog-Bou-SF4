{% extends 'base.html.twig' %}

{% block title %}Technology{% endblock %}

{% block body %}
    <h1>Technology</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ technology.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ technology.name }}</td>
            </tr>
            <tr>
                <th>Acquired</th>
                <td>{{ technology.acquired ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Inprogress</th>
                <td>{{ technology.inprogress ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('technology_index') }}">back to list</a>

    <a href="{{ path('technology_edit', {'id': technology.id}) }}">edit</a>

    {{ include('Admin/technology/_delete_form.html.twig') }}
{% endblock %}